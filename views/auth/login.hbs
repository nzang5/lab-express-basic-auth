<div id="form">
  <h2>Login</h2>

  <form action="/auth/login" method="POST">
 
    <label> Username
      <input type="string" name="username" placeholder="ironhacker123" />
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
 
    <button type="submit">Login</button>
 
     {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>